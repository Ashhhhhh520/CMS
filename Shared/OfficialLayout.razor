    <HeadContent>
        <PageTitle>My University</PageTitle>
    </HeadContent>

    <MFooter Style="background-image:url(imgs/official/footer/footer.png);background-size:cover;color:white;">
        <CMS.OfficialComponents.FooterComponents.MyFooter />
    </MFooter>
</MApp>

