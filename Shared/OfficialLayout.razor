@inherits LayoutComponentBase
@inject MasaBlazor MasaBlazor
<MApp Class="body-large">
    <MErrorHandler>
        <!--top menu-->
        <CMS.OfficialComponents.MenuComponents.AppBar />

        <!-- main body -->
        <MMain Style="padding-top: 178px; background: repeating-linear-gradient(to bottom, #9d7373, #c5b2b2) ">
            <MContainer Fluid Class="px-9">
                <MResponsive Class="mx-auto overflow-visible overview" MaxWidth="1480">
                    @Body
                </MResponsive>
            </MContainer>
        </MMain>
